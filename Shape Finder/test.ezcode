method Start
    window main new
    event main close Quit
    main open
    
    window dimensions new : type:none, opacity:0, state:maximized
    dimensions open
    global var width dimensions:w
    global var height dimensions:h
    dimensions close
    
    shape box x:400, y:300
    main display box
    
    loop true {
        await 5
        
        var left main:x
        var top main:y
        var negX (- width / 2 + left)
        var negY (- height / 2 + top)
        
        box x:(400 - negX - 800), y:(300 - negY - 500)
        print box:x : box:y
    }
    
endmethod

method Quit
    stop all
endmethod
