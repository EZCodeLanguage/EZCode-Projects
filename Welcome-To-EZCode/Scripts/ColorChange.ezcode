var old_color_r button:Btn:r
var old_color_g button:Btn:g
var old_color_b button:Btn:b

var new_color_r Random 0 255
var new_color_g Random 0 255
var new_color_b Random 0 255

var miliseconds_wait 100
var switch_colors 20

loop switch_colors
    color Btn new_color_r new_color_g new_color_b
    await miliseconds_wait
    new_color_r Random 0 255
    new_color_g Random 0 255
    new_color_b Random 0 255
end

color Btn old_color_r old_color_g old_color_b